<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/acc_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="adriengervais.dandy.activities.CharacterCreation" >

    <Space
        android:layout_column="2"
        android:layout_gravity="fill_vertical"
        android:layout_row="5" />

    <TextView
        android:id="@+id/acc_name_label"
        android:layout_column="0"
        android:layout_gravity="start|center_vertical"
        android:layout_row="0"
        android:labelFor="@+id/acc_name_field"
        android:text="@string/name_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Space />

    <TextView
        android:id="@+id/acc_race_label"
        android:layout_column="0"
        android:layout_gravity="start|top"
        android:layout_row="1"
        android:labelFor="@+id/acc_race_field"
        android:text="@string/race_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Space />

    <TextView
        android:id="@+id/acc_class_label"
        android:layout_column="0"
        android:layout_gravity="start|top"
        android:layout_row="2"
        android:labelFor="@+id/acc_class_field"
        android:text="@string/class_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/acc_name_field"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="0"
        android:ems="10"
        android:inputType="textPersonName" >
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/acc_race_field"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="1"
        android:ems="10"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/acc_class_field"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|top"
        android:layout_row="2"
        android:ems="10"
        android:inputType="textCapWords" />

</GridLayout>
