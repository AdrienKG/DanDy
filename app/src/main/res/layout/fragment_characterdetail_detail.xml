<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fdc_details_scroll_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/fcd_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="10"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/fcd_details_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_vertical"
            android:labelFor="@+id/fcd_details_name_field"
            android:text="@string/name_label"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/fcd_details_name_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fcd_details_name_label"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/fcd_details_name_label"
            android:layout_toEndOf="@+id/fcd_details_name_label"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:textAppearance="?android:attr/textAppearanceLarge" >
        </EditText>

        <TextView
            android:id="@+id/fcd_details_class_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fcd_details_race_label"
            android:labelFor="@+id/fcd_details_class_field"
            android:text="@string/class_label"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/fcd_details_class_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fcd_details_class_label"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/fcd_details_class_label"
            android:layout_toEndOf="@+id/fcd_details_class_label"
            android:enabled="false"
            android:inputType="textCapWords"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/fcd_details_ll_level_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/fcd_details_name_label"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/fcd_details_level_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/fcd_details_level_field"
                android:text="@string/level_label"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/fcd_details_level_field"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:ems="10"
                android:enabled="false"
                android:inputType="number" />

            <TextView
                android:id="@+id/fcd_details_experience_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/fcd_details_experience_field"
                android:text="@string/experience_label"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/fcd_details_experience_field"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:ems="10"
                android:enabled="false"
                android:inputType="number" />

        </LinearLayout>

        <TextView
            android:id="@+id/fcd_details_race_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/fcd_details_ll_level_experience"
            android:labelFor="@+id/fcd_details_race_field"
            android:text="@string/race_label"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/fcd_details_race_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fcd_details_race_label"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/fcd_details_race_label"
            android:layout_toEndOf="@+id/fcd_details_race_label"
            android:ems="10"
            android:enabled="false"
            android:inputType="textCapWords"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/fcd_details_paragon_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/fcd_details_class_label"
            android:labelFor="@+id/fcd_details_paragon_field"
            android:text="@string/paragon_label"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/fcd_details_paragon_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fcd_details_paragon_label"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/fcd_details_paragon_label"
            android:layout_toEndOf="@id/fcd_details_paragon_label"
            android:enabled="false"
            android:inputType="textCapWords"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/fcd_details_epic_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/fcd_details_paragon_label"
            android:labelFor="@+id/fcd_details_epic_field"
            android:text="@string/epic_label"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/fcd_details_epic_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fcd_details_epic_label"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/fcd_details_epic_label"
            android:layout_toEndOf="@id/fcd_details_epic_label"
            android:enabled="false"
            android:inputType="textCapWords"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/fcd_details_deity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/fcd_details_epic_label"
            android:labelFor="@+id/fcd_details_deity_field"
            android:text="@string/deity_label"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/fcd_details_deity_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fcd_details_deity_label"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/fcd_details_deity_label"
            android:layout_toEndOf="@id/fcd_details_deity_label"
            android:enabled="false"
            android:inputType="textCapWords"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/fcd_details_ll_weight_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/fcd_details_deity_label"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/fcd_details_weight_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/fcd_details_weight_field"
                android:text="@string/weight_label"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/fcd_details_weight_field"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:ems="10"
                android:enabled="false"
                android:inputType="number" />

            <TextView
                android:id="@+id/fcd_details_height_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/fcd_details_height_field"
                android:text="@string/height_label"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/fcd_details_height_field"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:ems="10"
                android:enabled="false"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fcd_details_ll_size_vision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/fcd_details_ll_weight_height"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/fcd_details_size_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/fcd_details_size_field"
                android:text="@string/size_label"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/fcd_details_size_field"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:ems="10"
                android:enabled="false"
                android:inputType="textCapWords"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/fcd_details_vision_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/fcd_details_vision_field"
                android:text="@string/vision_label"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/fcd_details_vision_field"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:ems="10"
                android:enabled="false"
                android:inputType="textCapWords"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fcd_details_ll_misc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/fcd_details_ll_size_vision"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/fcd_details_misc_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/fcd_details_misc_field"
                android:text="@string/misc_label"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/fcd_details_misc_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="textMultiLine"
                android:lines="6"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>
