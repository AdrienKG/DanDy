<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/health_surges_layout"
    android:background="@drawable/border"
    android:padding="10dp"
    android:layout_marginLeft="@dimen/component_horizontal_margin"
    android:layout_marginRight="@dimen/component_horizontal_margin"
    android:elevation="@dimen/elevation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/temp_health_surges_amount"
        android:id="@+id/health_surges_amount"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/temp_health_surges_value"
        android:layout_alignParentStart="false"
        android:id="@+id/health_surge_value"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/health_surges_amount" />
</RelativeLayout>