<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="adriengervais.dandy" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CharacterCreation"
            android:label="@string/title_activity_character_creation"
            android:parentActivityName=".activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.CharacterDetailListActivity"
            android:label="@string/title_characterdetail_list"
            android:parentActivityName=".activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="adriengervais.dandy.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.CharacterDetailDetailActivity"
            android:label="@string/title_characterdetail_detail"
            android:parentActivityName=".activities.CharacterDetailListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="adriengervais.dandy.activities.CharacterDetailListActivity" />
        </activity>
    </application>

</manifest>
